<h1>Posts</h1>

<table class="table table-striped table-hover table-sm">
  <thead>
    <tr>
      <th>
        Date
      </th>
      <th>
        Daily Hours
      </th>
      <th>
        Work Performed
      </th>
      <th>
        Status
      </th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody id="posts">
    <%= render @posts %>
  </tbody>
</table>

<div class="d-flex align-items-center">
  <div class="m-auto" id="paginator">
    <%= paginate @posts, remote: true %>
  </div>
</div>


