<div class='row'>
  <div class="col-md-2"></div>
    <div class="col-md-8">
      <%= form_with model: @post, local: true do |f| %>
        <div class="form-group">
          <%= f.label 'Date' %>
          <%= f.date_field :date,  class: "form-control" %><br />
        </div>

        <div class="form-group">
          <%= f.label 'Rationale' %>
          <%= f.text_area :rationale, class: "form-control" %>
        </div>

        <%= f.submit 'Submit', class: "btn btn-primary" %>
      <% end %>
    </div>
  <div class="col-md-2"></div>
</div>

